<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherLiz.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <SearchBar Placeholder="Busca un lugar del mundo" x:Name="searchBar" SearchButtonPressed="SearchBar_SearchButtonPressed"/>

            <!-- Ciudad y región -->
            <Label x:Name="CityLabel" 
               FontSize="32" 
               HorizontalOptions="Center" 
               TextColor="Black" />

            <!-- Condición del clima -->
            <Image x:Name="WeatherIcon" 
               HeightRequest="100" 
               WidthRequest="100" 
               HorizontalOptions="Center" />

            <!-- Temperatura -->
            <Label x:Name="TemperatureLabel" 
               FontSize="48" 
               HorizontalOptions="Center" 
               TextColor="Black" />

            <!-- Humedad y viento -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label x:Name="HumidityLabel" 
                   FontSize="18" 
                   TextColor="Gray" 
                   VerticalOptions="Center" />
                <Label x:Name="WindLabel" 
                   FontSize="18" 
                   TextColor="Gray" 
                   VerticalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>